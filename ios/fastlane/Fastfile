default_platform(:ios)

platform :ios do
  desc "Push a new beta build to Testflight"
  lane :beta do 
    setup_ci if ENV["CI"]
    match(app_identifier: "com.schoolcontrol.trudev", type: "appstore")
    build_app(workspace: "Runner.xcworkspace", scheme: "Runner" ,xcargs: "-allowProvisioningUpdates" )
    pilot(api_key_path: "fastlane/store.json" , skip_waiting_for_build_processing: true)
  end
end
